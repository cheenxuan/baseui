<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Banner" >
        <attr name="autoPlay" format="boolean"/>
        <attr name="loop" format="boolean"/>
        <attr name="intervalTime" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="XToolBar">
        <attr name="titleType">
            <enum name="text" value="0"></enum>
            <enum name="image" value="1"></enum>
            <enum name="tab" value="2"></enum>
        </attr>
        <attr name="subTitleType" >
            <enum name="text"  value="0"></enum>
            <enum name="image"  value="1"></enum>
        </attr>
        <attr name="title" format="string"></attr>
        <attr name="subTitle" format="string"></attr>
        <attr name="titleIamge" format="reference"></attr>
        <attr name="subTitleIamge" format="reference"></attr>
        <attr name="action_back" format="reference"></attr>
        <attr name="subTitleEnable" format="boolean"></attr>
        <attr name="actionEnable" format="boolean"></attr>
        <attr name="titleAppearance" format="reference"></attr>
        <attr name="subTitleAppearance" format="reference"></attr>
        <attr name="showLine" format="boolean"></attr>
    </declare-styleable>
    
    <declare-styleable name="TabLayout">
        
    </declare-styleable>

    <declare-styleable name="titleAppearance">
        <attr name="textColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
    </declare-styleable>
    
    <declare-styleable name="TabTopLayout">
        <attr name="fullScrenn" format="boolean"></attr>
        <attr name="canScroll" format="boolean"></attr>
    </declare-styleable>
</resources>